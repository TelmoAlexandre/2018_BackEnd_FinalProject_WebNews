<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Web Paper - @ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono|Fondamento|Roboto" rel="stylesheet" />
    @RenderSection("scripts", required: false)

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">


    <!-- CSS do _Layout -->
    <link href="~/Content/WebPaper.css" rel="stylesheet" />


</head>
<body>

    <div class="headerContainer">

        @Html.ActionLink("Create News", "Create", "News")

        @Html.Partial("_LoginPartial")
        <div class="title">
            @Html.ActionLink("Web Paper", "Index", "News")
        </div>

        <div class="date">@DateTime.Now.DayOfWeek, @DateTime.Now.ToString("MMMM") @DateTime.Now.ToString("dd"), @DateTime.Now.Year</div>

    </div>

    <div class="bodyContainer">
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="footer">
        <footer>
            <p>&copy; @DateTime.Now.Year - Web Paper</p>
        </footer>
    </div>


    <!-- Optional JavaScript (Bootstrap) -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

</body>

</html>


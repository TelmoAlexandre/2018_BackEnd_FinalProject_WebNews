@model WebNews_19089.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="col-4"></div>

<div class="registerContainer col-5">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" })) {

        @Html.AntiForgeryToken()

        <h2>@ViewBag.Title.</h2>
        <h4>Create a new account.</h4>

        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Birthday, new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Bio, new { @class = "control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Bio, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }

</div>

<div class="col-3"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

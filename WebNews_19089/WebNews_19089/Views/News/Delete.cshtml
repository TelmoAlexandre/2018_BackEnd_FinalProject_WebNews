@model WebNews_19089.Models.News

@{
    ViewBag.Title = "Delete";
}
<div class="col-12 newsDelete row">

    <div class="col-2"></div>
    <div class="col-8 newsDeleteConfirm">
        <h3>Are you sure you want to delete this News Article?</h3>
    </div>
    <div class="col-2"></div>

    <div class="col-2"></div>
    <div class="col-8">

        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.Title):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.Title)
        </p>


        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.Description):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.Description)
        </p>


        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.Content):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.Raw(Model.Content)
        </p>


        <p class="newsDeleteTitle">
            <span class="bold">Category:</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.Category.Name)
        </p>

        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.NewsDate):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.NewsDate)
        </p>


        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

            <div class="newsDeleteOptions">
                <input type="submit" value="Delete" class="btn btn-default" />| 
                @Html.ActionLink("Back", "Index")
            </div>
        }
    </div>

    <div class="col-2"></div>

</div>
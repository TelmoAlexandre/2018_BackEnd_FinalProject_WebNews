@model WebNews_19089.Models.News

@{
    ViewBag.Title = "Delete";
}
<div class="col-12 newsDelete row">

    <div class="col-1"></div>
    <div class="col-10 newsDeleteConfirm">
        <h2 class="bold">Are you sure you want to delete this News Article?</h2>
        <hr />
    </div>
    
    <div class="col-1"></div>

    <div class="col-1"></div>
    <div class="col-10">

        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.Title):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.Title)
        </p>


        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.Description):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.Description)
        </p>


        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.Content):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.Raw(Model.Content)
        </p>


        <p class="newsDeleteTitle">
            <span class="bold">Category:</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.Category.Name)
        </p>

        <p class="newsDeleteTitle">
            <span class="bold">@Html.DisplayNameFor(model => model.NewsDate):</span>
        </p>
        <p class="newsDeleteTitle">
            @Html.DisplayFor(model => model.NewsDate)
        </p>

        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="newsDeleteOptions">
                <input type="submit" value="Delete" class="btn bold" />
            </div>
        }
    </div>

    <div class="col-1"></div>

</div>
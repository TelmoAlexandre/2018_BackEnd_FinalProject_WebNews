@model IEnumerable<WebNews_19089.Models.UsersProfile>

@{
    ViewBag.Title = "Permissions";
}


<div class="col-12 row">
    <div class="col-2"></div>
    <div class="adminUserList col-8 row">

        <div class="col-12">
            <h1>Users.</h1>
        </div>


        @foreach (var user in Model) {

        
        <div class="userBlock col-3">
            <a href="@Url.Action("UserPermissions","Manage",new { id = user.ID })">
                <div class="name">
                    <h1>@user.Name</h1>
                </div>
                <div class="email">
                    @user.UserName
                </div>
            </a>
        </div>
       

        }

    </div>
    <div class="col-2"></div>
</div>

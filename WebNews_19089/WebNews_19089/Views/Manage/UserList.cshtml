@model IEnumerable<WebNews_19089.Models.UsersProfile>

@{
    ViewBag.Title = "Permissions";
}


<div class="col-12 row">
    <div class="col-2"></div>
    <div class="adminUserList col-8 row">

        <div class="col-2" style="padding-top:0.6rem">
            <h1 class="bold">Users.</h1>
        </div>
        <div class="col-10 searchOption">
            <form action="/Manage/UserList" method="post">
                @Html.AntiForgeryToken()
                <div class="searchInputManager">
                    <input name="searchFilter" id="search-box" type="text" placeholder="Insert your search here..." class="search-box" />
                    <label for="search-box"><span class="glyphicon glyphicon-search search-icon blink"></span></label>
                    <input type="submit" value="Search" class="btn" id="search-submit" />
                </div>
            </form>
        </div>




        @foreach (var user in Model)
        {


            <div class="userBlock col-4">
                <a href="@Url.Action("UserPermissions","Manage",new { userProfileID = user.ID })">
                    <div class="name">
                        <h1>@user.Name</h1>
                    </div>
                    <div class="email">
                        @user.UserName
                    </div>
                </a>
            </div>


        }

    </div>
    <div class="col-2"></div>
</div>

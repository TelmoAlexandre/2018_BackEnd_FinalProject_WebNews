@model WebNews_19089.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="col-1"></div>
<div class="col-5">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
    <div class="adminUserPermissions">
        <h2 class="bold">Edit User Permissions.</h2>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Email)

        <div class="form-group">
            <span class="bold">Email: </span> @Model.Email
        </div>

        <hr />

        <div class="form-group">
            @Html.Label("Roles:", new { @class = "bold" })
            <span>
                @foreach (var item in Model.RolesList)
                {
                    <p>
                        <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                        @Html.Label(item.Value, new { @class = "control-label" })
                    </p>
                }
            </span>
        </div>

        <hr />

        <div class="form-group">
            <div>
                <input type="submit" value="Save" class="btn bold" />
            </div>
        </div>
    </div>
    }
</div>
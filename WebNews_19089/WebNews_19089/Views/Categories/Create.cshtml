@model WebNews_19089.Models.Categories

@{
    ViewBag.Title = "New Category";
}

<div class="col-1"></div>
<div class="createCategory col-4">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <h3 class="bold">Create a new Category.</h3>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "New category" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn bold createButton" />
            </div>
        </div>
    }

</div>
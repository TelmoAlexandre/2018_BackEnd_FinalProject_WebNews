@model WebNews_19089.Models.CommentsModificationViewModel

@{
    ViewBag.Title = "Delete";
}
<div class="commentDelete col-12 row">


    <div class="col-2"></div>
    <div class="col-8">
        <h2>Are you sure you want to delete this comment?</h2>
    </div>
    <div class="col-2"></div>

    <div class="col-2"></div>
    <div class="col-8">


        <div class="comment">

            <div class="commentHeaderContainer">

                <p class="commentHeaderUser">
                    by @Model.comment.UserProfile.Name
                </p>

                <p class="commentHeaderDate">
                    @Model.comment.CommentDate.Date.ToString("dd-MM-yyyy")
                </p>

            </div>

            <div class="commentBodyContainer">
                @Html.Raw(Model.comment.Content)
            </div>
        </div>

        <div class="commentDeleteOption">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Page)

                <div class="newsDeleteOptions">
                    <input type="submit" value="Delete" class="btn bold" />
                </div>
            }
        </div>

    </div>
</div>
<div class="col-2"></div>
@model WebNews_19089.Models.Comments

@{
    ViewBag.Title = "Delete";
}
<div class="commentDelete col-12 row">


    <div class="col-2"></div>
    <div class="col-8">
        <h2>Are you sure you want to delete this comment?</h2>
    </div>
    <div class="col-2"></div>

    <div class="col-2"></div>
    <div class="col-8">


        <div class="comment">

            <div class="commentHeaderContainer">

                <p class="commentHeaderUser">
                    by @Model.UserProfile.Name
                </p>

                <p class="commentHeaderDate">
                    @Model.CommentDate.Date.ToString("dd-MM-yyyy")
                </p>

            </div>

            <div class="commentBodyContainer">
                @Html.Raw(Model.Content)
            </div>
        </div>

        <div class="commentDeleteOption">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="newsDeleteOptions">
                <input type="submit" value="Delete" class="btn bold" /> <span>|| @Html.ActionLink("Back", "Details", "News", new { id = Model.NewsFK }, new { @class = "bold" })</span>
            </div>
            }
        </div>

    </div>
</div>
<div class="col-2"></div>